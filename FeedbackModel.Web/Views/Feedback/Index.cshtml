@model IEnumerable<FeedbackModel.Domain.Entities.Feedback>

<h2 style="text-align:center; margin-bottom:20px;">Feedback List</h2>

@if (Model != null && Model.Any())
{
    <table style="width:80%; margin:auto; border-collapse:collapse; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        <thead style="background-color:#4CAF50; color:white;">
            <tr>
                <th style="padding:12px; border:1px solid #ddd;">Student Name</th>
                <th style="padding:12px; border:1px solid #ddd;">Course</th>
                <th style="padding:12px; border:1px solid #ddd;">Rating</th>
                <th style="padding:12px; border:1px solid #ddd;">Date Submitted</th>
                <th style="padding:12px; border:1px solid #ddd;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 0;
            }
            @foreach (var feedback in Model)
            {
                var rowColor = (index % 2 == 0) ? "#f9f9f9" : "white";
                <tr style="background-color:@rowColor">
                    <td style="padding:12px; border:1px solid #ddd;">@feedback.StudentName</td>
                    <td style="padding:12px; border:1px solid #ddd;">@feedback.Course</td>
                    <td style="padding:12px; border:1px solid #ddd;">@feedback.Rating</td>
                    <td style="padding:12px; border:1px solid #ddd;">@feedback.DateSubmitted.ToShortDateString()</td>
                    <td style="padding:12px; border:1px solid #ddd;">
                        <a href="@Url.Action("Edit", "Feedback", new { id = feedback.Id })" style="color:#2196F3; text-decoration:none;">Edit</a> |
                        <a href="@Url.Action("Delete", "Feedback", new { id = feedback.Id })" style="color:#f44336; text-decoration:none;">Delete</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
}
else
{
    <p style="text-align:center; margin-top:20px;">No feedback entries available.</p>
}

<div style="text-align:center; margin-top:20px;">
    <a href="@Url.Action("Create", "Feedback")" style="background-color:#4CAF50; color:white; padding:10px 20px; text-decoration:none; border-radius:5px;">Add New Feedback</a>
</div>
